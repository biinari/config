## Gateway

Host gate
    #IdentityFile ~/.ssh/aws/fatsoma_trusted.pg1
    User trusted

#Host gateroot
#   IdentityFile ~/.ssh/aws/fatsoma_gateway.pem
#   User root

Host gate gateroot pg1
    HostName pg1.fatsomacloud.com
    Port 20522
    ForwardAgent yes
    #ControlMaster auto
    #ControlPath /tmp/ssh_mux_%h_%p_%r
    #ControlPersist 10m

## Chef provisioned

Host pra3
    HostName pra3.fatsomacloud.com
Host pra4
    HostName pra4.fatsomacloud.com

Host pw1
    HostName pw1.fatsomacloud.com

Host pkvs1
    HostName pkvs1.fatsomacloud.com
Host pkvs2
    HostName pkvs2.fatsomacloud.com

Host pt2
    HostName pt2.fatsomacloud.com

Host ppa3 web
    HostName ppa3.fatsomacloud.com
Host ppa4 sitebuilder
    HostName ppa4.fatsomacloud.com
Host pt3 task
    HostName pt3.fatsomacloud.com

Host pra? pw? pkvs? ppa? pt? sitebuilder web task
    IdentityFile ~/code/fatsoma/deployment_and_provisioning/keys/deploy_id_rsa
    ProxyCommand ssh -q gate nc %h %p
    User deploy
    ForwardAgent yes


