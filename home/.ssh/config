    HostName pw5.fatsomacloud.com

# Deploy key/user
Host dw? pas? pds? pkvs? pl? pp? ppa? pra? pt? pw? dev fatscan platform sitebuilder task web mongo mongo* mobile
    IdentityFile ~/code/fatsoma/deployment_and_provisioning/keys/deploy_id_rsa
    ProxyCommand ssh -q gate nc %h %p
    User deploy
    ForwardAgent yes

# Own private key
Host fatsoma_git fatgit
    ProxyCommand ssh -q gate nc %h %p
    ForwardAgent yes
    #ControlMaster auto
    #ControlPath /tmp/ssh_mux_%h_%p_%r

# East Lancs Scouts
Host els elancs eastlancashirescouts.org.uk
    HostName eastlancashirescouts.org.uk
    User elancs
    Port 2222

Host *
    GSSAPIAuthentication no
