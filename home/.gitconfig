[color]
    ui = auto
    whitespace = tabwidth=4
[user]
    name = Bill Ruddock
    email = bill.ruddock@gmail.com
[core]
    eol = lf
    autocrlf = input
    excludesfile = /home/bill/.gitignore
[push]
    default = upstream
[alias]
    vimdiff = difftool
    st = status -sb
    ci = commit
    co = checkout
    list = ls-tree --name-only HEAD:
    ls = ls-tree --name-only HEAD:
    unstage = reset HEAD --
    puff = pull --ff-only
    prune = remote prune origin
[push]
    default = upstream
[diff]
    tool = gvimdiff
[difftool]
    prompt = false
[merge]
    tool = gvimdiff
