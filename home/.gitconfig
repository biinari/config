[color]
  ui = auto
  whitespace = tabwidth=2
[user]
  name = Bill Ruddock
  email = bill.ruddock@gmail.com
[core]
  eol = lf
  autocrlf = input
  excludesfile = /home/bill/.gitignore
[push]
  default = upstream
[alias]
  vimdiff = difftool
  st = status -sb
  ci = commit
  co = checkout
  list = ls-tree --name-only HEAD:
  ls = ls-tree --name-only HEAD:
  unstage = reset HEAD --
  puff = pull --ff-only
  prune = remote prune origin
  thisbranch = rev-parse --abbrev-ref HEAD
  logbranch = ! git log $(git thisbranch) --not master
  rmmerged = ! [ "`git thisbranch`" != "master" ] && echo "not on master branch so refusing to remove merged branches" || git branch --merged | grep -v "\\*" | xargs -n 1 git branch -d
  toptag = describe --tags --abbrev=0 HEAD
  masterup = ! ([ "`git thisbranch`" = "master" ] || git co master) && git pull && git remote prune origin && ( git rmmerged || true )
  sed = ! git grep -z --full-name -l '.' | xargs -0 sed -i -e
  aliases = ! git config -l | grep alias | cut -c 7-
[push]
  default = upstream
[diff]
  tool = gvimdiff
[difftool]
  prompt = false
[merge]
  tool = gvimdiff
